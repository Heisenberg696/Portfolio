---
import { siteConfig } from "../config";
import SectionHeader from "./SectionHeader.astro";
---

<section id="contact" class="py-24 md:py-32 px-6 md:px-12 lg:px-24 max-w-[1600px] mx-auto">
  <SectionHeader title="Get In Touch" number="06" />
  
  <div class="max-w-4xl mx-auto mt-16">
    
    {/* Intro Text */}
    <div class="text-center mb-16">
      <h3 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Let's Build Something Amazing Together
      </h3>
      <p class="text-lg text-[#a8b2d1] leading-relaxed max-w-2xl mx-auto">
        I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision. 
        Whether you have a question or just want to say hi, feel free to reach out!
      </p>
    </div>

    {/* Contact Cards Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
      
      {/* Email Card */}
      {siteConfig.social.email && (
        <a
          href={`mailto:${siteConfig.social.email}`}
          class="group bg-[#1e2532] border border-[#2d3748] rounded-xl p-8 hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5"
        >
          <div class="flex items-start gap-4">
            <div class="flex items-center justify-center w-14 h-14 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-xl text-[#64ffda] flex-shrink-0 group-hover:bg-[#64ffda]/20 transition-colors">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            
            <div class="flex-1">
              <h4 class="text-xl font-bold text-white mb-2 group-hover:text-[#64ffda] transition-colors">
                Email Me
              </h4>
              <p class="text-[#a8b2d1] text-sm mb-3">
                Drop me a line and I'll get back to you ASAP
              </p>
              <p class="text-[#64ffda] font-mono text-sm break-all">
                {siteConfig.social.email}
              </p>
            </div>

            <svg class="w-5 h-5 text-[#717c99] group-hover:text-[#64ffda] group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </a>
      )}

      {/* LinkedIn Card */}
      {siteConfig.social.linkedin && (
        <a
          href={siteConfig.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-[#1e2532] border border-[#2d3748] rounded-xl p-8 hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5"
        >
          <div class="flex items-start gap-4">
            <div class="flex items-center justify-center w-14 h-14 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-xl text-[#64ffda] flex-shrink-0 group-hover:bg-[#64ffda]/20 transition-colors">
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </div>
            
            <div class="flex-1">
              <h4 class="text-xl font-bold text-white mb-2 group-hover:text-[#64ffda] transition-colors">
                Connect on LinkedIn
              </h4>
              <p class="text-[#a8b2d1] text-sm mb-3">
                Let's connect professionally and expand our network
              </p>
              <p class="text-[#64ffda] font-mono text-sm">
                View Profile
              </p>
            </div>

            <svg class="w-5 h-5 text-[#717c99] group-hover:text-[#64ffda] group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </a>
      )}

      {/* GitHub Card */}
      {siteConfig.social.github && (
        <a
          href={siteConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-[#1e2532] border border-[#2d3748] rounded-xl p-8 hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5"
        >
          <div class="flex items-start gap-4">
            <div class="flex items-center justify-center w-14 h-14 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-xl text-[#64ffda] flex-shrink-0 group-hover:bg-[#64ffda]/20 transition-colors">
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </div>
            
            <div class="flex-1">
              <h4 class="text-xl font-bold text-white mb-2 group-hover:text-[#64ffda] transition-colors">
                Check My Code
              </h4>
              <p class="text-[#a8b2d1] text-sm mb-3">
                Explore my repositories and open-source contributions
              </p>
              <p class="text-[#64ffda] font-mono text-sm">
                View GitHub
              </p>
            </div>

            <svg class="w-5 h-5 text-[#717c99] group-hover:text-[#64ffda] group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </a>
      )}

      {/* Resume Download Card */}
      <a
        href="/resume.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-[#1e2532] border border-[#2d3748] rounded-xl p-8 hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5"
      >
        <div class="flex items-start gap-4">
          <div class="flex items-center justify-center w-14 h-14 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-xl text-[#64ffda] flex-shrink-0 group-hover:bg-[#64ffda]/20 transition-colors">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          
          <div class="flex-1">
            <h4 class="text-xl font-bold text-white mb-2 group-hover:text-[#64ffda] transition-colors">
              Download Resume
            </h4>
            <p class="text-[#a8b2d1] text-sm mb-3">
              Get my full resume with detailed experience and skills
            </p>
            <p class="text-[#64ffda] font-mono text-sm">
              Download PDF
            </p>
          </div>

          <svg class="w-5 h-5 text-[#717c99] group-hover:text-[#64ffda] group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </div>
      </a>
    </div>

    {/* Primary CTA */}
    <div class="text-center">
      <div class="inline-block bg-gradient-to-br from-[#64ffda]/10 to-[#64ffda]/5 border border-[#64ffda]/30 rounded-2xl p-8 md:p-12">
        <h3 class="text-2xl md:text-3xl font-bold text-white mb-4">
          Ready to Start Your Project?
        </h3>
        <p class="text-[#a8b2d1] mb-8 max-w-md mx-auto">
          Let's discuss how I can help bring your ideas to life with clean code and creative solutions.
        </p>
        <a
          href={`mailto:${siteConfig.social.email}`}
          class="inline-flex items-center gap-3 px-8 py-4 bg-[#64ffda] hover:bg-[#52d4ba] text-[#0f1419] font-bold rounded-lg transition-all text-lg shadow-lg shadow-[#64ffda]/20 hover:shadow-xl hover:shadow-[#64ffda]/30 group"
        >
          <span>Send Me an Email</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>