---
import { siteConfig } from "../config";
import SectionHeader from "./SectionHeader.astro";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{hasEducation && (
  <section id="education" class="py-24 md:py-32 px-6 md:px-12 lg:px-24 max-w-[1600px] mx-auto">
    <SectionHeader title="Education" number="04" />
    
    <div class="max-w-5xl mt-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {siteConfig.education.map((edu) => (
          <article class="group bg-[#1e2532] border border-[#2d3748] rounded-lg p-8 hover:border-[#64ffda] transition-all duration-300">
            
            {/* Icon */}
            <div class="inline-flex items-center justify-center w-12 h-12 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-lg mb-6">
              <svg class="w-6 h-6 text-[#64ffda]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
              </svg>
            </div>

            {/* Degree */}
            <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-[#64ffda] transition-colors">
              {edu.degree}
            </h3>

            {/* School */}
            <p class="text-[#64ffda] text-lg font-semibold mb-2">
              {edu.school}
            </p>

            {/* Date */}
            <div class="flex items-center gap-2 mb-6">
              <svg class="w-4 h-4 text-[#717c99]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-[#717c99] text-sm font-mono">
                {edu.dateRange}
              </span>
            </div>

            {/* Achievements */}
            <ul class="space-y-3">
              {edu.achievements.map((achievement) => (
                <li class="flex gap-3 text-[#a8b2d1] leading-relaxed">
                  <span class="flex-shrink-0 mt-1">
                    <svg class="w-4 h-4 text-[#64ffda]" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </span>
                  <span>{achievement}</span>
                </li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>
  </section>
)}