---
import { siteConfig } from "../config";
import SectionHeader from "./SectionHeader.astro";

const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{hasExperience && (
  <section id="experience" class="py-24 md:py-32 px-6 md:px-12 lg:px-24 max-w-[1600px] mx-auto">
    <SectionHeader title="Work Experience" number="03" />
    
    <div class="max-w-6xl mx-auto mt-16">
      <div class="space-y-8">
        {siteConfig.experience.map((exp, index) => (
          <article class="group relative">
            
            {/* Timeline connector line (except for last item) */}
            {index !== siteConfig.experience.length - 1 && (
              <div class="hidden lg:block absolute left-[31px] top-20 bottom-0 w-0.5 bg-[#2d3748] group-hover:bg-[#64ffda]/30 transition-colors"></div>
            )}

            <div class="flex flex-col lg:flex-row gap-6 lg:gap-8">
              
              {/* Icon Circle */}
              <div class="flex-shrink-0 flex items-start lg:items-center">
                <div class="relative">
                  <div class="flex items-center justify-center w-16 h-16 bg-[#1e2532] border-2 border-[#2d3748] rounded-full text-[#64ffda] group-hover:border-[#64ffda] group-hover:bg-[#64ffda]/10 transition-all duration-300 z-10 relative">
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                  {/* Pulse effect */}
                  <div class="absolute inset-0 rounded-full bg-[#64ffda] opacity-0 group-hover:opacity-20 group-hover:animate-ping"></div>
                </div>
              </div>

              {/* Content Card */}
              <div class="flex-1">
                <div class="bg-[#1e2532] border border-[#2d3748] rounded-xl p-6 lg:p-8 hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5">
                  
                  {/* Header Section */}
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4 mb-6">
                    <div class="flex-1">
                      <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-[#64ffda] transition-colors">
                        {exp.title}
                      </h3>
                      
                      <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
                        <p class="text-lg font-semibold text-[#64ffda]">
                          {exp.company}
                        </p>
                        <span class="hidden sm:inline text-[#2d3748]">â€¢</span>
                        <div class="flex items-center gap-2 text-[#a8b2d1]">
                          <svg class="w-4 h-4 text-[#717c99]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <span class="text-sm font-mono">{exp.dateRange}</span>
                        </div>
                      </div>
                    </div>

                    {/* Badge for employment type */}
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center px-3 py-1.5 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-full text-[#64ffda] text-xs font-bold uppercase tracking-wider">
                        Full-time
                      </span>
                    </div>
                  </div>

                  {/* Description */}
                  {exp.description && (
                    <p class="text-[#a8b2d1] mb-6 leading-relaxed">
                      {exp.description}
                    </p>
                  )}

                  {/* Responsibilities */}
                  {exp.responsibilities && exp.responsibilities.length > 0 && (
                    <div>
                      <h4 class="text-sm font-bold text-white uppercase tracking-wider mb-4 flex items-center gap-2">
                        <svg class="w-4 h-4 text-[#64ffda]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Key Responsibilities
                      </h4>
                      <ul class="space-y-3">
                        {exp.responsibilities.map((responsibility) => (
                          <li class="flex gap-3 text-[#a8b2d1] leading-relaxed group/item">
                            <span class="flex-shrink-0 mt-1.5">
                              <svg class="w-4 h-4 text-[#64ffda]" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                              </svg>
                            </span>
                            <span class="group-hover/item:text-white transition-colors">{responsibility}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>

      {/* Call to Action */}
      <div class="mt-16 text-center">
        <a
          href="/Swallieu_Dawud_(CV)(1).pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-8 py-4 border-2 border-[#64ffda] text-[#64ffda] hover:bg-[#64ffda]/10 font-semibold rounded-lg transition-all text-base group"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span>Download Full Resume</span>
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
)}