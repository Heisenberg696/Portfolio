---
import SocialLinks from "./SocialLinks.astro";
import { siteConfig } from "../config";
---

<section id="hero" class="relative min-h-screen flex items-center px-6 md:px-12 lg:px-24 max-w-[1600px] mx-auto pt-20">
  <div class="w-full max-w-5xl">
    
    {/* Small greeting text */}
    <p class="text-[#64ffda] font-mono text-base md:text-lg mb-8 animate-fade-in" style="animation-delay: 0.1s;">
      Hi, my name is
    </p>

    {/* HUGE name - matching reference */}
    <h1 class="mb-6 animate-fade-in" style="animation-delay: 0.2s;">
      <span class="block text-[clamp(40px,8vw,80px)] font-bold leading-[1.1] text-white tracking-tight mb-2">
        Swallieu
      </span>
      <span class="block text-[clamp(40px,8vw,80px)] font-bold leading-[1.1] text-[#64ffda] tracking-tight">
        Dawud
      </span>
    </h1>

    {/* Tagline */}
    <h2 class="text-[clamp(20px,4vw,28px)] font-semibold leading-[1.3] text-[#a8b2d1] mb-8 max-w-3xl animate-fade-in" style="animation-delay: 0.3s;">
      Architecting Innovation & Engineering Excellence
    </h2>

    {/* Description paragraph */}
    <p class="text-base md:text-lg text-[#a8b2d1] leading-relaxed max-w-2xl mb-12 animate-fade-in" style="animation-delay: 0.4s;">
      Transforming complex challenges into elegant, high-impact digital solutions. 
      Passionate about leveraging advanced technology, strategic thinking, and creative 
      problem-solving to deliver world-class products.
    </p>

    {/* CTA Buttons */}
    <div class="flex flex-wrap gap-4 mb-16 animate-fade-in" style="animation-delay: 0.5s;">
      <a
        href="#contact"
        class="inline-flex items-center gap-2 px-8 py-4 bg-[#64ffda] hover:bg-[#52d4ba] text-[#0f1419] font-bold rounded-lg transition-all text-base shadow-lg shadow-[#64ffda]/20 hover:shadow-xl hover:shadow-[#64ffda]/30"
      >
        <span>Hire Me</span>
      </a>
      
      <a
        href="#projects"
        class="inline-flex items-center gap-2 px-8 py-4 bg-transparent border-2 border-[#64ffda] text-[#64ffda] hover:bg-[#64ffda]/10 font-bold rounded-lg transition-all text-base"
      >
        <span>View Work</span>
      </a>
    </div>

    {/* Social Links */}
    <div class="animate-fade-in" style="animation-delay: 0.6s;">
      <SocialLinks social={siteConfig.social} />
    </div>
  </div>

  {/* Decorative Elements - matching reference */}
  <div class="absolute left-8 top-1/3 hidden lg:block animate-fade-in opacity-20 hover:opacity-40 transition-opacity" style="animation-delay: 0.7s;">
    <svg class="w-20 h-20 text-[#64ffda]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
    </svg>
  </div>

  <div class="absolute right-8 bottom-32 hidden lg:block animate-fade-in opacity-20 hover:opacity-40 transition-opacity" style="animation-delay: 0.8s;">
    <svg class="w-24 h-24 text-[#64ffda]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
    </svg>
  </div>

  {/* Scroll indicator */}
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-fade-in hidden md:flex" style="animation-delay: 0.9s;">
    <a href="#about" class="flex flex-col items-center gap-2 text-[#717c99] hover:text-[#64ffda] transition-colors group">
      <span class="text-xs font-mono uppercase tracking-wider">Scroll Down</span>
      <svg class="w-6 h-6 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce {
    animation: bounce 2s infinite;
  }
</style>