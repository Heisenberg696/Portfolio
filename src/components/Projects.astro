---
import { siteConfig } from "../config";
import SectionHeader from "./SectionHeader.astro";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="py-24 md:py-32 px-6 md:px-12 lg:px-24 max-w-[1600px] mx-auto">
    <SectionHeader title="Featured Projects" number="03" />
    
    <div class="max-w-7xl mx-auto mt-16">
      <!-- Projects Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {siteConfig.projects.map((project) => (
          <article class="group bg-[#1e2532] border border-[#2d3748] rounded-xl overflow-hidden hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5 flex flex-col">
            
            {/* Project Image/Preview */}
            <div class="relative h-56 bg-gradient-to-br from-[#0f1419] to-[#1e2532] overflow-hidden">
              {project.image ? (
                <img 
                  src={project.image} 
                  alt={`${project.name} preview`}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center">
                  <div class="text-center">
                    <svg class="w-16 h-16 mx-auto mb-2 text-[#64ffda]/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                    </svg>
                    <p class="text-xs text-[#717c99] font-mono">Project Preview</p>
                  </div>
                </div>
              )}
            </div>

            {/* Project Info */}
            <div class="p-6 flex-1 flex flex-col">
              {/* Title */}
              <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-[#64ffda] transition-colors">
                {project.name}
              </h3>
              
              {/* Subtitle */}
              {project.subtitle && (
                <p class="text-sm text-[#64ffda] font-semibold mb-3">
                  {project.subtitle}
                </p>
              )}
              
              {/* Description */}
              <p class="text-[#a8b2d1] leading-relaxed mb-6 flex-1 line-clamp-4">
                {project.description}
              </p>

              {/* Tech Stack Tags */}
              {project.skills && project.skills.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.skills.map((skill) => (
                    <span class="px-3 py-1.5 text-xs font-mono bg-[#0f1419] border border-[#2d3748] text-[#64ffda] rounded-md hover:border-[#64ffda] transition-colors">
                      {skill}
                    </span>
                  ))}
                </div>
              )}

              {/* Action Links */}
              <div class="flex gap-3 pt-4 border-t border-[#2d3748]">
                {/* Demo Video Link */}
                {project.demoVideo ? (
                  <a
                    href={project.demoVideo}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-[#64ffda] hover:bg-[#52d4ba] text-[#0f1419] font-semibold rounded-lg transition-all text-sm"
                    aria-label={`Watch ${project.name} demo video`}
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                    <span>Demo</span>
                  </a>
                ) : (
                  <div class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-[#2d3748] text-[#717c99] font-semibold rounded-lg text-sm cursor-not-allowed">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                    <span>Demo</span>
                  </div>
                )}

                {/* Live Project Link */}
                {project.link ? (
                  <a
                    href={project.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-[#0f1419] hover:bg-[#2d3748] border border-[#2d3748] hover:border-[#64ffda] text-[#64ffda] font-semibold rounded-lg transition-all text-sm"
                    aria-label={`Visit ${project.name} live site`}
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    <span>Live Site</span>
                  </a>
                ) : (
                  <div class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-[#0f1419] border border-[#2d3748] text-[#717c99] font-semibold rounded-lg text-sm cursor-not-allowed">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    <span>Live Site</span>
                  </div>
                )}
              </div>

              {/* GitHub Link */}
              {project.github && (
                <>
                  {project.githubClickable === false ? (
                    // Non-clickable GitHub link (plain text)
                    <div class="flex items-center gap-2 text-[#717c99] text-sm font-mono mt-3 cursor-default">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      <span>View on GitHub</span>
                    </div>
                  ) : (
                    // Clickable GitHub link
                    <a
                      href={project.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 text-[#717c99] hover:text-[#64ffda] text-sm font-mono mt-3 transition-colors group/link"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      <span>View on GitHub</span>
                      <svg class="w-3 h-3 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  )}
                </>
              )}
            </div>
          </article>
        ))}
      </div>

      {/* View More Button */}
      <div class="mt-16 text-center">
        <a
          href={siteConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-8 py-4 border-2 border-[#64ffda] text-[#64ffda] hover:bg-[#64ffda]/10 font-semibold rounded-lg transition-all text-base group"
        >
          <span>View All Projects on GitHub</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
)}

<style>
  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>