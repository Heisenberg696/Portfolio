---
import { siteConfig } from "../config";
import SectionHeader from "./SectionHeader.astro";
---

<section id="skills" class="py-24 md:py-32 px-6 md:px-12 lg:px-24 max-w-[1600px] mx-auto">
  <SectionHeader title="My Skills" number="02" />
  
  <p class="text-lg text-[#a8b2d1] max-w-3xl mb-16">
    Technologies I master to deliver exceptional results
  </p>

  <div class="max-w-7xl mx-auto">
    {/* Main Skill Categories Grid */}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
      
      {/* Frontend Development */}
      <article class="group bg-[#1e2532] border border-[#2d3748] rounded-xl p-8 hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5">
        <div class="flex items-center justify-center w-16 h-16 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-xl mb-6 text-[#64ffda] group-hover:bg-[#64ffda]/20 transition-colors">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        
        <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-[#64ffda] transition-colors">
          {siteConfig.skillCategories.frontend.title}
        </h3>
        
        <p class="text-[#a8b2d1] mb-6 leading-relaxed">
          {siteConfig.skillCategories.frontend.description}
        </p>

        <ul class="space-y-3">
          {siteConfig.skillCategories.frontend.skills.map((skill) => (
            <li class="flex items-center gap-3 text-[#a8b2d1]">
              <svg class="w-5 h-5 text-[#64ffda] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{skill}</span>
            </li>
          ))}
        </ul>
      </article>

      {/* Backend Development */}
      <article class="group bg-[#1e2532] border border-[#2d3748] rounded-xl p-8 hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5">
        <div class="flex items-center justify-center w-16 h-16 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-xl mb-6 text-[#64ffda] group-hover:bg-[#64ffda]/20 transition-colors">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
          </svg>
        </div>
        
        <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-[#64ffda] transition-colors">
          {siteConfig.skillCategories.backend.title}
        </h3>
        
        <p class="text-[#a8b2d1] mb-6 leading-relaxed">
          {siteConfig.skillCategories.backend.description}
        </p>

        <ul class="space-y-3">
          {siteConfig.skillCategories.backend.skills.map((skill) => (
            <li class="flex items-center gap-3 text-[#a8b2d1]">
              <svg class="w-5 h-5 text-[#64ffda] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{skill}</span>
            </li>
          ))}
        </ul>
      </article>

      {/* Innovation & Leadership */}
      <article class="group bg-[#1e2532] border border-[#2d3748] rounded-xl p-8 hover:border-[#64ffda] transition-all duration-300 hover:shadow-xl hover:shadow-[#64ffda]/5">
        <div class="flex items-center justify-center w-16 h-16 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-xl mb-6 text-[#64ffda] group-hover:bg-[#64ffda]/20 transition-colors">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        
        <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-[#64ffda] transition-colors">
          {siteConfig.skillCategories.innovation.title}
        </h3>
        
        <p class="text-[#a8b2d1] mb-6 leading-relaxed">
          {siteConfig.skillCategories.innovation.description}
        </p>

        <ul class="space-y-3">
          {siteConfig.skillCategories.innovation.skills.map((skill) => (
            <li class="flex items-center gap-3 text-[#a8b2d1]">
              <svg class="w-5 h-5 text-[#64ffda] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{skill}</span>
            </li>
          ))}
        </ul>
      </article>
    </div>

    {/* Additional Tools & Technologies */}
    <div class="bg-[#1e2532] border border-[#2d3748] rounded-xl p-8">
      <div class="flex items-center gap-3 mb-6">
        <div class="flex items-center justify-center w-12 h-12 bg-[#64ffda]/10 border border-[#64ffda]/30 rounded-lg text-[#64ffda]">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white">
          {siteConfig.skillCategories.other.title}
        </h3>
      </div>
      
      <div class="flex flex-wrap gap-3">
        {siteConfig.skillCategories.other.skills.map((skill) => (
          <span class="px-4 py-2.5 bg-[#0f1419] border border-[#2d3748] text-[#64ffda] rounded-lg font-mono text-sm hover:border-[#64ffda] hover:shadow-lg hover:shadow-[#64ffda]/10 transition-all cursor-default">
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>